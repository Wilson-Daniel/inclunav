<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/app_background_dark_color"
    android:layout_height="match_parent"
    tools:context=".activities.LanguageSelection">
    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_8sdp"
            android:textColor="#ffffff"
            android:textSize="@dimen/_16sdp"
            android:text="Choose your language"
            android:layout_height="wrap_content" />
        <View
            android:background="#ffffff"
            android:layout_gravity="center"
            android:layout_width="@dimen/_140sdp"
            android:layout_height="1dp"
            android:layout_marginVertical="@dimen/_4sdp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textSize="@dimen/_16sdp"
            android:text="अपनी भाषा चुनिए"
            android:layout_height="wrap_content" />

        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_40sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/englishLang"
                android:gravity="center"
                android:text="English"
                android:textSize="@dimen/_24sdp"
                android:textStyle="bold"
                android:foreground="?attr/selectableItemBackground"
                android:background="@drawable/button_color_layout"
                android:layout_width="@dimen/_240sdp"
                android:layout_height="@dimen/_64sdp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/hindiLang"
                android:gravity="center"
                android:foreground="?attr/selectableItemBackground"
                android:text="हिंदी"
                android:textSize="@dimen/_24sdp"
                android:textStyle="bold"
                android:background="@drawable/button_color_layout"
                android:layout_width="@dimen/_240sdp"
                android:layout_height="@dimen/_64sdp" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</FrameLayout>