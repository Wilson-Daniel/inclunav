<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000000"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/invisibleView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible"
            android:contentDescription="Description for TalkBack"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#000000"
            android:paddingHorizontal="@dimen/_12sdp">
            <LinearLayout
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000000">

                <ImageView
                    android:id="@+id/imageRoute"
                    android:contentDescription="share your location"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="@dimen/_4sdp"
                    android:scaleType="fitCenter"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:src="@drawable/straight"
                    android:layout_gravity="center"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    app:tint="#ffffff" />
                <TextView
                    android:id="@+id/routeText"
                    android:layout_width="@dimen/_260sdp"
                    android:layout_height="@dimen/_36sdp"
                    android:gravity="center"
                    android:textAlignment="viewStart"
                    android:paddingVertical="@dimen/_4sdp"
                    android:text="Directions for left turn"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/routeTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 10m"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />
                <LinearLayout
                    android:layout_width="@dimen/_260sdp"
                    android:layout_height="@dimen/_1sdp"
                    android:background="#ffffff"/>
            </LinearLayout>

            <LinearLayout
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000000">

                <ImageView
                    android:contentDescription="share your location"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="@dimen/_4sdp"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:src="@drawable/ic_compass"
                    android:layout_gravity="center"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    app:tint="#ffffff" />
                <TextView
                    android:id="@+id/route_advice"
                    android:layout_width="@dimen/_260sdp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAlignment="viewStart"
                    android:paddingVertical="@dimen/_4sdp"
                    android:text="Cautionary advice while traversing the route.\n\nImportant reference points to confirm your orientation.\n\nLandmark near your starting point.
                    Landmark near your next decision point."
                    android:textColor="#ffffff"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_marginVertical="@dimen/_4sdp"
                android:layout_gravity="right"
                android:layout_width="@dimen/_260sdp"
                android:layout_height="@dimen/_1sdp"
                android:background="#ffffff"/>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>

