<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/black" /> <!-- Background color -->
            <stroke
                android:width="10dp"
            android:color="#000000" /> <!-- Border color (black) -->
        </shape>
    </item>
    <item android:id="@android:id/content">
        <shape android:shape="rectangle">
            <solid android:color="@color/gray_light" /> <!-- Button color -->
        </shape>
    </item>
</layer-list>
